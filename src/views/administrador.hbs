<div class="container-fuid">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="usuarioStripe-tab" data-bs-toggle="tab" data-bs-target="#usuarioStripe"
        type="button" role="tab" aria-controls="usuarioStripe" aria-selected="true">Gestor de Usuarios Stripe</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="notifica-tab" data-bs-toggle="tab" data-bs-target="#notifica" type="button"
        role="tab" aria-controls="notifica" aria-selected="false">Notificaciones</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="soporte-tab" data-bs-toggle="tab" data-bs-target="#soporte" type="button" role="tab"
        aria-controls="soporte" aria-selected="false">Soporte</button>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="usuarioStripe" role="tabpanel" aria-labelledby="usuarioStripe-tab">
      <div class="container mt-4">
        <h3>Stripe Usuarios</h3>
        <p>This is the content of the Home tab.</p>
      </div>
    </div>

    <div class="tab-pane fade" id="notifica" role="tabpanel" aria-labelledby="notifica-tab">
      <div class="container mt-4">
        <div class="row mt-3">
          <button class="square-button" data-bs-toggle="modal" data-bs-target="#nuevoRegistroModal">
            <div class="circle"></div>
          </button>
        </div>
        <div class="row mt-3">
          <div class="col-md-12">
            <h4>Buscar</h4>
            <input type="text" class="form-control" name="searchCat" id="searchCat">
          </div>
        </div>

        <!-- Lista de Comentarios -->
        <div class="container mt-3">
          <h2>Lista de notificaciones</h2>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Estatus</th>
                <th scope="col">Editar</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Ejemplo de aviso1</td>
                <td>Elemento 1</td>
                <td>Tipo A</td>
                <td><a href="#" class="btn btn-primary">Editar</a></td>
              </tr>
              <tr>
                <td>Ejemplo de aviso2</td>
                <td>Elemento 2</td>
                <td>Tipo B</td>
                <td><a href="#" class="btn btn-primary">Editar</a></td>
              </tr>
              <!-- Puedes agregar más filas según sea necesario -->
            </tbody>
          </table>
        </div>

        {{!-- Modal --}}
        <div class="modal fade" id="nuevoRegistroModal" tabindex="-1" aria-labelledby="nuevoRegistroModalLabel"
          aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="nuevoRegistroModalLabel">Nuevo Registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <!-- Contenido del modal -->
                <form action="/new-hojas-trabajo" id="uploadForm" method="POST" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label for="titulo" class="form-label">Título:</label>
                    <input type="text" class="form-control" id="titulo">
                  </div>
                  <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripción:</label>
                    <textarea class="form-control" id="descripcion" rows="3"></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="estatus" class="form-label">Estatus:</label>
                    <select class="form-select" id="estatus">
                      <option value="pendiente">Activa</option>
                      <option value="en-proceso">Baja</option>                      
                    </select>
                  </div>
                  <div class="d-flex justify-content-center">
                    <button class="btn btn-primary">Guardar</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="soporte" role="tabpanel" aria-labelledby="soporte-tab">
      <div class="container mt-4">
        <h3>Soporte Content</h3>
        <p>This is the content of the Contact tab.</p>
      </div>
    </div>
  </div>
